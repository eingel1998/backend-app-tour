{
  "name": "payload-sqlite-backend",
  "version": "1.0.0",
  "description": "Payload CMS backend with SQLite",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon src/server.ts",
    "build": "rimraf build && tsc",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types"
  },
  "dependencies": {
    "express": "^4.17.1",
    "payload": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@payloadcms/db-sqlite": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
